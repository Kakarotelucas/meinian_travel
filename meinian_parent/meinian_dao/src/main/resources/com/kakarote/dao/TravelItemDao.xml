<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--接口的全限定名-->
<mapper namespace="com.kakarote.dao.TravelItemDao">
    <!--新增自由行,parameterType在dao中已经配置了类型别名，不用再写全类名，写类名小驼峰即可-->
    <insert id="add" parameterType="travelItem">
        insert into
        t_travelitem(code,name,sex,age,price,type,remark,attention)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <!--自由行分页
    Page findPage(String queryString);
    -->
    <select id="findPage" parameterType="string" resultType="travelItem">
        select * from t_travelitem
        <!--搜索框项目编号code或者项目名称name模糊查询，value指的是搜索框输入值。
            使用if获取简单参数必须使用value或者用@param（""）指定名字-->
        <where>
            <if test="value!=null and value.length>0">
                code = #{value} or name like "%"#{value}"%"
            </if>
        </where>
    </select>

    <!--删除自由行
    void delete(Integer id);
    -->
    <delete id="delete" parameterType="integer">
        delete from t_travelitem where id = #{id}
    </delete>

    <!--编辑表单回显数据
        TravelItem findById(Integer id);
    -->
    <select id="findById" parameterType="integer" resultType="travelItem">
        select * from t_travelitem where id = #{id}
    </select>

    <!--编辑自由行表单内容
    update t_travelitem set code=#{code},name=#{name} where id=#{id}
    -->
    <update id="edit" parameterType="travelItem">
        update t_travelitem
        <set>
            <if test="code!=null and code.length>0">
                code=#{code},
            </if>
            <if test="name!=null and name.length>0">
                name=#{name},
            </if>
            <if test="sex!=null and sex.length>0">
                sex=#{sex},
            </if>
            <if test="age!=null and age.length>0">
                age=#{age},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="type!=null and type.length>0">
                type=#{type},
            </if>
            <if test="remark!=null and remark.length>0">
                remark=#{remark},
            </if>
            <if test="attention!=null and attention.length>0">
                attention=#{attention},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--新增跟团游中回显自由行信息
    List<TravelItem> findAll();
    -->
    <select id="findAll" resultType="travelItem">
        select * from t_travelitem
    </select>

    <!--删除自由行进行关联交验-->
    <select id="findCountByTravelitemId" parameterType="integer" resultType="long">
        select count(*) from t_travelgroup_travelitem
        where travelitem_id = #{id}

    </select>


</mapper>












