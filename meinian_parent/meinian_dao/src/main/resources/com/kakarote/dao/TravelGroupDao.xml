<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--接口的全限定名-->
<mapper namespace="com.kakarote.dao.TravelGroupDao">

    <!--
    //新增跟团游
    void add(TravelGroup travelGroup);
    void setTravelGroupAndTravelItem(Map<String, Integer> map);
    用主键生成器回填id，不然无法得到id：keyProperty="id" useGeneratedKeys="true"
    -->
    <insert id="add" parameterType="travelGroup" keyProperty="id" useGeneratedKeys="true">
        insert into t_travelgroup(code, name, helpCode, sex, remark, attention)
        values
        (#{code}, #{name}, #{helpCode}, #{sex}, #{remark}, attention =#{attention})
    </insert>

    <insert id="setTravelGroupAndTravelItem" parameterType="map">
        insert into t_travelgroup_travelitem(travelgroup_id,travelitem_id) values (#{travelGroup},#{travelItem})
    </insert>


    <!--分页查询
    Page<TravelGroup> findPage(@Param("queryString") String queryString);
    concat: 在mysql的语法中，表示字符串的连接符，可以代替 %#{value}%
    -->
    <select id="findPage" parameterType="string" resultType="travelGroup">
        select * from t_travelgroup
        <where>
            <if test="queryString!=null and queryString.length>0">
                code =#{queryString} or name like concat("%",#{queryString},"%") or                                helpCode=#{queryString}
            </if>
        </where>
    </select>


    <!--新增跟团游中回显自由行信息
    List<TravelGroup> findAll();
    -->
    <select id="findAll" resultType="travelGroup">
        select * from t_travelgroup;
    </select>

    <!--
    帮助套餐查询关联数据的方法。id是套餐传来的id
    List<TravelGroup> findTravelGroupListById(Integer id);
    -->
    <resultMap id="travelGroupResultMap" type="travelGroup">
        <id property="id" column="id"></id>
        <result property="id" column="id"></result>
        <result property="code" column="code"></result>
        <result property="name" column="name"></result>
        <result property="helpCode" column="helpCode"></result>
        <result property="sex" column="sex"></result>
        <result property="remark" column="remark"></result>
        <result property="attention" column="attention"></result>
        <!--查询private List<TravelItem> travelItems-->
        <collection property="travelItems" column="id" select="com.kakarote.dao.TravelItemDao.findTravelItemListById"></collection>

    </resultMap>

    <!--将两张表内连接得到套餐id为3时对应的自由行信息,或者采用子查询
    SELECT t_travelgroup.* FROM t_setmeal_travelgroup,t_travelgroup
    WHERE t_setmeal_travelgroup.travelgroup_id = t_travelgroup.id
    AND t_setmeal_travelgroup.setmeal_id= 3;-->
    <select id="findTravelGroupListById" parameterType="int" resultMap="travelGroupResultMap">
        SELECT t_travelgroup.* FROM t_travelgroup
        WHERE id in (SELECT travelgroup_id FROM t_setmeal_travelgroup where setmeal_id = #{id});
    </select>
</mapper>