<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--接口的全限定名-->
<mapper namespace="com.kakarote.dao.AddressDao">

    <!--
    //获取所有分店地址
    List<Address> findAll();
    -->
    <select id="findAll" resultType="address">
        select * from t_address
    </select>

    <!--
    //分页查询分公司地址
    Page<Address> selectByCondition(String queryString);
    -->
    <select id="selectByCondition" parameterType="string" resultType="address">
        select * from t_address
        <if test="value != null and value.length > 0">
            where addressName like "%"#{value}"%"
        </if>
    </select>

    <!--
    //新增分公司地址
    void addAddress(Address address);
    -->
    <insert id="addAddress" parameterType="address">
        insert into t_address(addressName,lng,lat) values(#{addressName},#{lng},#{lat})
    </insert>


    <!--
    //删除分公司地址
    void deleteById(Integer id);
    -->
    <delete id="deleteById" parameterType="int">
        delete from t_address where id=#{id}
    </delete>


</mapper>